<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.citec</groupId>
    <artifactId>dal.service</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>DeviceService</name>
    
    <parent>
        <groupId>de.citec</groupId>
        <artifactId>dal</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>    
    
    <url>http://maven.apache.org</url>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.8.1</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <programs>
                        <program>
                            <mainClass>de.citec.dal.DALService</mainClass>
                            <id>dal-service</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>de.citec.dal.bindings.openhab.util.configgen.OpenHABConfigGenerator</mainClass>
                            <id>dal-openhab-config-generator</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                    </programs>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.storage</artifactId>
            <version>${global.version.jul}</version>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.extension.rsb.com</artifactId>
            <version>${global.version.jul}</version>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>dm.core</artifactId>
            <version>${global.version.registry-manager}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>lm.core</artifactId>
            <version>0.3.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>dm.remote</artifactId>
            <version>0.3.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>lm.remote</artifactId>
            <version>0.3.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.extension.rsb.processing</artifactId>
            <version>${global.version.jul}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.extension.rsb.interface</artifactId>
            <version>${global.version.jul}</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>
